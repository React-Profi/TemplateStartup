{
	"ts-node": {
		"files": true,
		"transpileOnly": true
	},
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"inlineSources": true,
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"]
}
